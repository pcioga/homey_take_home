<div class="max-w-7xl mx-auto">
 <div class="flex justify-between items-center mb-6">
   <h1 class="text-2xl font-bold">Projects</h1>
   <%= link_to "New Project", new_project_path, class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
 </div>

 <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
   <% @projects.each do |project| %>
     <%= link_to project do %>
       <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
         <div class="flex justify-between items-start">
           <h2 class="text-xl font-semibold text-gray-900"><%= project.name %></h2>
           <span class="status-badge status-<%= project.status %>">
            <%= project.status.titleize %>
          </span>
         </div>
         <div class="mt-4 flex items-center text-sm text-gray-600">
           <svg class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
             <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
           </svg>
           <%= pluralize(project.users.count, 'member') %>
         </div>
       </div>
     <% end %>
   <% end %>
 </div>
</div>
