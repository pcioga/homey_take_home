<header class="bg-white shadow">
  <nav class="mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 justify-between">
      <div class="flex">
        <%= link_to root_path, class: "flex items-center" do %>
          <h1 class="text-xl font-bold">HomeyTakeHome</h1>
        <% end %>
      </div>
      <div class="flex items-center gap-4">
        <% if current_user %>
          <span><%= current_user.name %></span>
          <%= link_to "Logout", logout_path, class: "text-gray-600 hover:text-gray-900", data: { turbo_method: :delete } %>
        <% else %>
          <%= link_to "Sign Up", signup_path, class: "text-gray-600 hover:text-gray-900" %>
          <%= link_to "Login", login_path, class: "text-gray-600 hover:text-gray-900" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
