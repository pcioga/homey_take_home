<h1>Login</h1>
<% if flash[:error] %>
  <div class="error"><%= flash[:error] %></div>
<% end %>
<%= form_with(url: login_path, scope: :session) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit "Login" %>
<% end %>
